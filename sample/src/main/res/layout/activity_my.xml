<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <TextView
        android:text="@string/integer_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/integer_key"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/integer_value"
        android:layout_toRightOf="@+id/integer_key" />

    <TextView
        android:text="@string/boolean_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boolean_key"
        android:layout_below="@+id/integer_key"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/boolean_value"
        android:layout_below="@+id/integer_value"
        android:layout_toRightOf="@+id/boolean_key" />

    <TextView
        android:text="@string/string_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/string_key"
        android:layout_below="@+id/boolean_key"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/string_value"
        android:layout_below="@+id/boolean_value"
        android:layout_toRightOf="@+id/string_key" />

    <TextView
        android:text="@string/float_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/float_key"
        android:layout_below="@+id/string_key"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/float_value"
        android:layout_below="@+id/string_value"
        android:layout_toRightOf="@+id/float_key" />

    <TextView
        android:text="@string/long_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/long_key"
        android:layout_below="@+id/float_key"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/long_value"
        android:layout_below="@+id/float_value"
        android:layout_toRightOf="@+id/long_key" />

</RelativeLayout>
